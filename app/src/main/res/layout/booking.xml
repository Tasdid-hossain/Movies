<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Your Booking"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/secondTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/movieImage"
        app:layout_constraintTop_toBottomOf="@id/book"
        android:textStyle="bold"
        android:text="asdasd"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/secondDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/movieImage"
        app:layout_constraintTop_toBottomOf="@id/secondTitle"
        android:text="asdasd"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/secondTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/movieImage"
        app:layout_constraintTop_toBottomOf="@id/secondDate"
        android:text="gggg"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#000"/>


</android.support.constraint.ConstraintLayout>